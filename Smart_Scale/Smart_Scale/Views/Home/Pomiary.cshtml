@model IEnumerable<Smart_Scale.Models.Pomiar>

@{
    ViewBag.Title = "Pomiary";
}
 
<h3>@ViewBag.Message</h3>

<table class="table">
    <tr>
        <th>
            Waga w kg
        </th>
        <th>
            Data dodania
        </th>
        <th></th>
    </tr>

    @foreach (var m in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => m.Waga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => m.Datadodania)
            </td>
            <td>
                @Html.ActionLink("Usuń pomiar", "Delete", new { id = m.Id, userid = m.UserId})
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Powrót do listy użytkowników", "Users")
</div>