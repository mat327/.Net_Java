@model IEnumerable<Smart_Scale.Models.User>

@{
    ViewBag.Title = "Użytkownicy";
}

<h3>@ViewBag.Message</h3>

<p>
    @Html.ActionLink("Utwórz użytkownika", "CreateUser")
</p>
<table class="table">
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.ActionLink("Pomiary", "Pomiary", new { imie = item.Imie, userid = item.Id, nazwisko = item.Nazwisko })  |
                @Html.ActionLink("Dodaj pomiar", "Dodajpomiar", new {userid = item.Id})  |
                @Html.ActionLink("Wykresy pomiarów", "ShowWykres", new { imie = item.Imie, userid = item.Id, nazwisko = item.Nazwisko })
            </td>
        </tr>
    }

</table>
